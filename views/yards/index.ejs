<%- include('../partials/header.ejs') %>

<h1>Yard Listings</h1>

<% if (yards.length) { %>
  <ul>
    <% yards.forEach((yard) => { %>
      <li><a href="/yards/<%= yard._id %>"><%= yard.address %> is <%= yard.status %></a></li>
    <% }) %>
  </ul>
<% } else { %>
  <p>You Must Create a Yard</p>
<% } %>

