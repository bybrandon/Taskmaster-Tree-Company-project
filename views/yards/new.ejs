<%- include('../partials/header.ejs') %>

<h1>Add New Yard</h1>

<form action="/yards" method="POST">
  <label for="address">Address</label>
  <input type="text" name="address" id="address" />

   <label for="status">Status:</label>
  <select id="status" name="status">
    <option value="Planting">Planting</option>
    <option value="Replacing">Replacing</option>
    <option value="Trimming">Trimming</option>
  </select>

  <label for="trees">Trees:</label>
  <select id="trees" name="trees" multiple>
    <% trees.forEach((tree) => { %>
      <option value="<%= tree._id %>"><%= tree.description %></option>
    <% }) %>
  </select>

  
<button type="submit">Revamp Yard</button>
</form>


